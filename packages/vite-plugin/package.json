{
  "name": "vite-plugin-tannijs",
  "version": "0.1.1",
  "type": "module",
  "description": "Vite plugin for compiling .tanni single-file components",
  "license": "MIT",
  "author": "Sebastijan Zindl",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean --out-dir dist --external tannijs-compiler",
    "prepublishOnly": "pnpm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "dependencies": {
    "tannijs-compiler": "workspace:*"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
